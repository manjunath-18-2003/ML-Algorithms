from sklearn.linear_model import LinearRegression
import numpy as np

# Example dataset
X = np.array([
    [1000, 3],   # Area, Bedrooms
    [1500, 4],
    [800, 2],
    [1200, 3],
    [2000, 5]
])

y = np.array([50, 80, 40, 60, 100])  # Prices

# Create model
model = LinearRegression()
model.fit(X, y)

print("Coefficients:", model.coef_)
print("Intercept:", model.intercept_)
print("Prediction for [1800 sq ft, 4 bedrooms]:", model.predict([[1800, 4]]))
